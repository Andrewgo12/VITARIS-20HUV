# VITAL RED Gmail Integration Environment Variables
# Hospital Universitaria ESE - Departamento de Innovaci√≥n y Desarrollo

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
DB_HOST=localhost
DB_PORT=5432
DB_NAME=vital_red
DB_USER=postgres
DB_PASSWORD=your_secure_password_here

# =============================================================================
# REDIS CONFIGURATION (Optional - for caching and queuing)
# =============================================================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=your_redis_password_here

# =============================================================================
# API CONFIGURATION
# =============================================================================
API_HOST=0.0.0.0
API_PORT=8001
API_RELOAD=false
API_WORKERS=1

# =============================================================================
# GMAIL INTEGRATION SETTINGS
# =============================================================================
# Email polling interval in seconds (300 = 5 minutes)
POLL_INTERVAL=300

# Number of emails to process in each batch
BATCH_SIZE=10

# Maximum number of emails to fetch per request
MAX_RESULTS=100

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
LOG_LEVEL=INFO
LOG_CONSOLE=true

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
# Encryption key for sensitive data (generate a secure key)
ENCRYPTION_KEY=your-32-character-encryption-key-here

# Allowed email domains for referrals (comma-separated)
ALLOWED_DOMAINS=eps-sanitas.com.co,compensar.com,sura.com.co,nuevaeps.com.co,famisanar.com.co,salud.gov.co,minsalud.gov.co

# =============================================================================
# FRONTEND INTEGRATION
# =============================================================================
# VITAL RED React frontend API endpoint
FRONTEND_API=http://localhost:3000/api

# Webhook URL for real-time updates
WEBHOOK_URL=http://localhost:3000/webhook/gmail

# Authentication token for frontend communication
FRONTEND_AUTH_TOKEN=your-frontend-auth-token-here

# =============================================================================
# MONITORING AND ALERTS
# =============================================================================
# Email address for system alerts
ALERT_EMAIL=admin@hospital-ese.com

# Alert thresholds
ALERT_PROCESSING_ERRORS=5
ALERT_QUEUE_SIZE=100
ALERT_DISK_USAGE=90

# =============================================================================
# FILE PROCESSING CONFIGURATION
# =============================================================================
# Enable OCR for image processing
ENABLE_OCR=true

# OCR language (spa+eng for Spanish and English)
OCR_LANGUAGE=spa+eng

# Maximum attachment size in bytes (50MB)
MAX_ATTACHMENT_SIZE=52428800

# =============================================================================
# PERFORMANCE SETTINGS
# =============================================================================
# Number of concurrent workers for processing
CONCURRENT_WORKERS=4

# Processing timeout in seconds
PROCESSING_TIMEOUT=300

# Maximum retry attempts for failed processing
MAX_RETRIES=3

# Retry delay in seconds
RETRY_DELAY=60

# =============================================================================
# BACKUP AND STORAGE
# =============================================================================
# Enable automatic backup of processed emails
BACKUP_PROCESSED_EMAILS=true

# Backup retention period in days
BACKUP_RETENTION_DAYS=90

# =============================================================================
# DEVELOPMENT SETTINGS (Development only)
# =============================================================================
# Enable debug mode (DO NOT use in production)
DEBUG=false

# Enable SQL query logging (DO NOT use in production)
SQL_DEBUG=false

# =============================================================================
# PRODUCTION SETTINGS
# =============================================================================
# SSL/TLS Configuration
SSL_ENABLED=false
SSL_CERT_PATH=/path/to/ssl/cert.pem
SSL_KEY_PATH=/path/to/ssl/key.pem

# Rate limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=3600

# =============================================================================
# EXTERNAL SERVICES
# =============================================================================
# SMTP Configuration for notifications
SMTP_HOST=smtp.hospital-ese.com
SMTP_PORT=587
SMTP_USER=notifications@hospital-ese.com
SMTP_PASSWORD=your_smtp_password
SMTP_TLS=true

# =============================================================================
# MEDICAL CONFIGURATION
# =============================================================================
# Default priority level for unclassified referrals
DEFAULT_PRIORITY=media

# Default specialty for unclassified referrals
DEFAULT_SPECIALTY=medicina_general

# Automatic assignment rules (JSON format)
AUTO_ASSIGNMENT_RULES={"cardiologia": "Dr. Rodriguez", "neurologia": "Dr. Martinez"}

# =============================================================================
# COMPLIANCE AND AUDIT
# =============================================================================
# Enable audit logging
AUDIT_LOGGING=true

# Data retention period in days
DATA_RETENTION_DAYS=2555  # 7 years as per medical regulations

# Enable data anonymization for expired records
ENABLE_ANONYMIZATION=true

# =============================================================================
# INTEGRATION TOKENS
# =============================================================================
# Hospital Information System integration
HIS_API_ENDPOINT=https://his.hospital-ese.com/api
HIS_API_TOKEN=your-his-api-token

# Laboratory System integration
LAB_API_ENDPOINT=https://lab.hospital-ese.com/api
LAB_API_TOKEN=your-lab-api-token

# Radiology System integration
RAD_API_ENDPOINT=https://rad.hospital-ese.com/api
RAD_API_TOKEN=your-rad-api-token

# =============================================================================
# NOTES
# =============================================================================
# 1. Replace all placeholder values with actual configuration
# 2. Keep this file secure and never commit it to version control
# 3. Use strong passwords and encryption keys
# 4. Regularly rotate authentication tokens
# 5. Monitor logs for any configuration issues
# 6. Test all integrations in development environment first
