# VITAL RED Client Environment Configuration
# Hospital Universitaria ESE - Departamento de Innovación y Desarrollo

# API Configuration
VITE_API_URL=http://localhost:3001/api
VITE_GMAIL_API_URL=http://localhost:8001
VITE_WEBSOCKET_URL=ws://localhost:8002

# Application Configuration
VITE_APP_NAME=VITAL RED
VITE_APP_VERSION=2.0.0
VITE_HOSPITAL_NAME=Hospital Universitaria ESE
VITE_DEPARTMENT=Departamento de Innovación y Desarrollo

# Feature Flags
VITE_ENABLE_GMAIL_INTEGRATION=true
VITE_ENABLE_REAL_TIME_UPDATES=true
VITE_ENABLE_NOTIFICATIONS=true
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_DEBUG=false
VITE_ENABLE_MOCK_DATA=false
VITE_ENABLE_PERFORMANCE_MONITORING=false

# UI Configuration
VITE_DEFAULT_THEME=light
VITE_DEFAULT_LANGUAGE=es
VITE_DEFAULT_PAGE_SIZE=10
VITE_MAX_PAGE_SIZE=100
VITE_TOAST_DURATION=5000
VITE_MAX_TOASTS=5

# Security Configuration
VITE_SESSION_TIMEOUT=3600000
VITE_TOKEN_REFRESH_THRESHOLD=300000
VITE_MAX_LOGIN_ATTEMPTS=5
VITE_LOCKOUT_DURATION=900000
VITE_ENABLE_2FA=false
VITE_ENABLE_SESSION_MONITORING=true

# File Upload Configuration
VITE_MAX_FILE_SIZE=10485760
VITE_UPLOAD_CHUNK_SIZE=1048576

# WebSocket Configuration
VITE_WS_RECONNECT_INTERVAL=5000
VITE_WS_MAX_RECONNECT_ATTEMPTS=10
VITE_WS_HEARTBEAT_INTERVAL=30000
VITE_WS_CONNECTION_TIMEOUT=10000
VITE_WS_AUTO_CONNECT=true

# Gmail Integration Configuration
VITE_GMAIL_POLL_INTERVAL=300000
VITE_GMAIL_MAX_EMAILS=50
VITE_GMAIL_AUTO_PROCESSING=true
VITE_GMAIL_NOTIFICATIONS=true
VITE_GMAIL_FILTER_KEYWORDS=referencia,interconsulta,remision
VITE_GMAIL_PRIORITY_KEYWORDS=urgente,critico,emergencia

# Performance Configuration
VITE_ENABLE_LAZY_LOADING=true
VITE_ENABLE_VIRTUAL_SCROLLING=false
VITE_DEBOUNCE_DELAY=300
VITE_THROTTLE_DELAY=100
VITE_CACHE_TTL=300000
VITE_MAX_CACHE_SIZE=100

# Monitoring Configuration
VITE_ENABLE_ERROR_REPORTING=false
VITE_ENABLE_PERFORMANCE_TRACKING=false
VITE_ENABLE_USER_ANALYTICS=false
VITE_ERROR_REPORTING_URL=
VITE_ANALYTICS_ID=
VITE_SENTRY_DSN=

# Development Configuration
VITE_NODE_ENV=development
VITE_DEBUG_MODE=false
VITE_ENABLE_REDUX_DEVTOOLS=false
VITE_ENABLE_CONSOLE_LOGS=false
VITE_MOCK_API_DELAY=1000

# Production Configuration
VITE_ENABLE_SERVICE_WORKER=false

# Validation Configuration
VITE_PASSWORD_MIN_LENGTH=8
VITE_NAME_MIN_LENGTH=2
VITE_NAME_MAX_LENGTH=100
