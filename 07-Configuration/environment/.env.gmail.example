# Gmail Extractor Configuration - VITAL RED
# Copiar a .env y configurar valores reales

# ==============================================
# CONFIGURACIÓN DE GMAIL
# ==============================================
# Cuenta de Gmail configurada para Hospital Universitaria ESE
GMAIL_EMAIL=kevinrlinze@gmail.com
GMAIL_PASSWORD=your_app_password_here
GMAIL_IMAP_SERVER=imap.gmail.com
GMAIL_IMAP_PORT=993
GMAIL_SMTP_SERVER=smtp.gmail.com
GMAIL_SMTP_PORT=587
GMAIL_USE_APP_PASSWORD=true
GMAIL_FOLDERS=INBOX,Sent
GMAIL_SEARCH_CRITERIA=ALL

# ==============================================
# CONFIGURACIÓN DE BASE DE DATOS
# ==============================================
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASSWORD=
DB_NAME=vital_red

# ==============================================
# CONFIGURACIÓN DE GEMINI AI
# ==============================================
# Obtener clave gratuita en: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL=gemini-pro
GEMINI_MAX_TOKENS=2048
GEMINI_TEMPERATURE=0.7

# ==============================================
# CONFIGURACIÓN DE SELENIUM
# ==============================================
SELENIUM_HEADLESS=true
SELENIUM_WINDOW_WIDTH=1920
SELENIUM_WINDOW_HEIGHT=1080
SELENIUM_TIMEOUT=30
SELENIUM_IMPLICIT_WAIT=10
SELENIUM_PAGE_LOAD_TIMEOUT=30

# User Agent para evitar detección
SELENIUM_USER_AGENT=Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/120.0.0.0 Safari/537.36

# ==============================================
# CONFIGURACIÓN DE EXTRACCIÓN
# ==============================================
MAX_EMAILS_PER_SESSION=300
BATCH_SIZE=10
RETRY_ATTEMPTS=3
RETRY_DELAY=5
DOWNLOAD_ATTACHMENTS=true
PROCESS_PDFS=true
ENABLE_AI_ANALYSIS=true
ENABLE_OCR=false
MAX_FILE_SIZE_MB=50
ALLOWED_FILE_TYPES=pdf,doc,docx,txt,jpg,jpeg,png

# ==============================================
# CONFIGURACIÓN DE SEGURIDAD
# ==============================================
DELAY_BETWEEN_REQUESTS=2.0
MAX_CONCURRENT_EXTRACTIONS=2
RATE_LIMIT_PER_MINUTE=30
SESSION_TIMEOUT_MINUTES=60
MAX_LOGIN_ATTEMPTS=3
LOGIN_COOLDOWN_MINUTES=15

# ==============================================
# CONFIGURACIÓN DE LOGGING
# ==============================================
LOG_LEVEL=INFO
LOG_FILE=gmail_extraction.log
LOG_MAX_SIZE_MB=100
LOG_BACKUP_COUNT=5
LOG_ENABLE_CONSOLE=true
LOG_ENABLE_FILE=true
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# ==============================================
# CONFIGURACIÓN DE ALMACENAMIENTO
# ==============================================
TEMP_DIR=temp
ATTACHMENTS_DIR=attachments
CLEANUP_TEMP_FILES=true
MAX_STORAGE_GB=10
COMPRESS_ATTACHMENTS=false

# ==============================================
# CONFIGURACIÓN DE NOTIFICACIONES
# ==============================================
ENABLE_EMAIL_NOTIFICATIONS=false
NOTIFICATION_EMAIL=
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
ENABLE_WEBHOOK_NOTIFICATIONS=false
WEBHOOK_URL=

# ==============================================
# CONFIGURACIÓN DE MONITOREO
# ==============================================
ENABLE_METRICS=true
METRICS_PORT=8002
HEALTH_CHECK_INTERVAL=60
PERFORMANCE_MONITORING=true
ERROR_TRACKING=true

# ==============================================
# CONFIGURACIÓN DE DESARROLLO
# ==============================================
DEBUG_MODE=false
MOCK_GMAIL=false
TEST_MODE=false
VERBOSE_LOGGING=false
SAVE_SCREENSHOTS=false

# ==============================================
# NOTAS DE CONFIGURACIÓN
# ==============================================

# GEMINI_API_KEY:
# - Obtener gratis en Google AI Studio
# - Necesario para análisis inteligente de correos
# - Opcional pero altamente recomendado

# SELENIUM_HEADLESS:
# - true: Más rápido, sin interfaz visual
# - false: Más lento, muestra navegador (útil para debug)

# MAX_EMAILS_PER_SESSION:
# - Máximo recomendado: 300
# - Para pruebas: 10-50
# - Para producción: 100-300

# DELAY_BETWEEN_REQUESTS:
# - Mínimo recomendado: 2.0 segundos
# - Valores muy bajos pueden activar protecciones anti-bot
# - Aumentar si se detectan bloqueos

# ENABLE_OCR:
# - Requiere Tesseract instalado en el sistema
# - Útil para extraer texto de imágenes
# - Puede ser lento para muchos archivos

# LOG_LEVEL:
# - DEBUG: Muy detallado (solo para desarrollo)
# - INFO: Información general (recomendado)
# - WARNING: Solo advertencias y errores
# - ERROR: Solo errores críticos
