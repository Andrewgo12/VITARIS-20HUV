# Server Configuration
NODE_ENV=development
PORT=3001

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/vitaris

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-here
JWT_EXPIRES_IN=7d

# Client Configuration
CLIENT_URL=http://localhost:5173

# Email Configuration (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# SMS Configuration (Twilio)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_FROM_NUMBER=+1234567890

# File Storage Configuration (AWS S3)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=vitaris-files

# Redis Configuration (for caching and sessions)
REDIS_URL=redis://localhost:6379

# Security Configuration
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging Configuration
LOG_LEVEL=info
LOG_MAX_FILES=5
LOG_MAX_SIZE=5242880

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_FREQUENCY=daily
BACKUP_RETENTION_DAYS=30

# Analytics Configuration
GA_TRACKING_ID=your-google-analytics-id

# Feature Flags
ENABLE_TELEMEDICINE=true
ENABLE_AI_ASSISTANT=false
ENABLE_MOBILE_APP=true
ENABLE_VOICE_COMMANDS=false
ENABLE_BIOMETRIC_AUTH=false
ENABLE_BLOCKCHAIN=false
ENABLE_IOT=true
ENABLE_ANALYTICS=true

# Performance Configuration
CACHE_TTL=300000
MAX_FILE_SIZE=52428800
MAX_CONCURRENT_CONNECTIONS=1000

# Medical Configuration
VITAL_SIGNS_REFRESH_INTERVAL=2000
APPOINTMENT_SLOT_DURATION=30
MAX_ADVANCE_BOOKING_DAYS=90
PRESCRIPTION_MAX_DURATION_DAYS=30

# Notification Configuration
NOTIFICATION_MAX_COUNT=50
NOTIFICATION_AUTO_EXPIRE_MS=5000
NOTIFICATION_SOUND_ENABLED=true

# Audit Configuration
AUDIT_ENABLED=true
AUDIT_RETENTION_DAYS=365
AUDIT_LOG_SENSITIVE_DATA=false

# Development Configuration
MOCK_DATA=true
DEBUG_MODE=true
HOT_RELOAD=true
SOURCE_MAP=true
